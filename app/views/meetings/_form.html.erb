<%= form_for(@meeting) do |f| %>
  <% if @meeting.errors.any? %>
    <div class="error_explanation">
      <%= t('error_explanation') %>
    </div>
  <% end %>

<div class="table">

  <div class="table_cell padding_right vertical_align">

    <div class="field">
      <div class="label">
        <%= f.label :name %>
      </div>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <div class="label">
        <%= f.label :location %>
      </div>
      <%= f.text_field :location, placeholder: 'URL or street address' %>
    </div>

    <div class="field">
      <div class="label">
        <%= f.label :time %>
      </div>
      <%= f.text_field :time %>
    </div>

    <div class="field">
      <div class="label">
        <%= f.label :date %>
      </div>
      <%= f.text_field :date %>
    </div>

    <div class="field">
      <div class="label">
        <%= f.label 'Maximum Members' %>
      </div>
      <%= f.number_field :maxmembers, min: 0, placeholder: '0 if no maximum' %>
    </div>

  </div>

  <div class="table_cell vertical_align">

    <div class="field">
      <div class="label">
        <%= f.label :description %>
      </div>
      <%= f.cktext_area :description %>
    </div>

    <div class="actions">
      <%= f.hidden_field :groupid, value: @groupid || @meeting.groupid %>
      <%= f.submit %>
    </div>

  </div>

</div>

<% end %>